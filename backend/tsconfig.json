{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "strict": true,
    "skipLibCheck": true,
    
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,

    "types": ["node"]
  },
  "include": ["src"]
}
